<script>
    // DOM memanjangkan dan mempersingkat tampilan body post di backend
    const postBody = document.querySelectorAll('.post-body');
    postBody.forEach(body => {
        const shortBody = body.innerHTML.substring(0,50) + " . . . <a href='#'>(more)</a>";
        const longBody = body.innerHTML + " <a href='#'>(less)</a>";

        body.innerHTML = shortBody;

        let isClicked = false;

        body.addEventListener("click", function() {
            if (isClicked === false) {
                body.innerHTML = longBody;
                isClicked = true;
            } else {
                body.innerHTML = shortBody;
                isClicked = false;
            }
        });
    });
</script>
